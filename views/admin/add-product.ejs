<%-include ("../include/head.ejs")%>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%-include ("../includes/navigation.ejs")%>
<main>
    <% if (errorMessage) { %>
        <div class="user-message user-message-error"><%= errorMessage %></div>
    <% } %>
    <form class="product-form" action="/admin/add-product" method="post" novalidate>
        <div class="form-control">
            <label for="title">Title</label>
            <input
                    type="text"
                    name="title"
                    id="title"
                    value="<%= oldInput.title %>">
        </div>
        <div class="form-control">
            <label for="imageUrl">Image Url</label>
            <input
                    class="<%= (validationErrors.find(e => {return e.param === 'imageUrl'}))? 'invalid': '' %>"
                    type="text"
                    name="imageUrl"
                    id="imageUrl"
                    value="<%= oldInput.imageUrl %>">
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input
                    class="<%= (validationErrors.find(e => {return e.param === 'price'}))? 'invalid': '' %>"
                    type="number"
                    name="price"
                    id="price"
                    step="0.01"
                    value="<%= oldInput.price %>">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea name="description" id="description" d></textarea>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit">Add Product</button>
    </form>
</main>
<%-include ("../include/end.ejs")%>